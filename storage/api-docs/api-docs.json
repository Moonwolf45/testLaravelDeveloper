{
    "openapi": "3.0.0",
    "info": {
        "title": "My API Title",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local Server"
        }
    ],
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Получение продуктов с учетом фильтра",
                "operationId": "d97d1c3727cbac49708b85f7d11f7d58",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Поиск по имени",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "price_from",
                        "in": "query",
                        "description": "Цена от",
                        "required": false,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "price_to",
                        "in": "query",
                        "description": "Цена до",
                        "required": false,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "category_id",
                        "in": "query",
                        "description": "Id категории",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "in_stock",
                        "in": "query",
                        "description": "В наличии",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "rating_from",
                        "in": "query",
                        "description": "Рейтинг от",
                        "required": false,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Сортировка",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "enum": [
                                "price_asc",
                                "price_desc",
                                "rating_desc",
                                "newest"
                            ]
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Текущая страница",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Кол-во товаров на странице",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 20
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductCollection"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ProductCollection": {
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Product"
                        }
                    },
                    "total": {
                        "type": "integer",
                        "example": 100
                    },
                    "page": {
                        "type": "integer",
                        "example": 2
                    },
                    "limit": {
                        "type": "integer",
                        "example": 20
                    },
                    "pages": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Product": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "iPhone 15 Pro"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 999.99
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "category": {
                        "type": "string",
                        "example": "Электроника"
                    },
                    "in_stock": {
                        "type": "boolean",
                        "example": true
                    },
                    "rating": {
                        "type": "number",
                        "format": "float",
                        "example": 4.8
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2026-01-17T21:06:06.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "example": "2026-01-17T21:06:06.000000Z"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "API Endpoints for Product management"
        }
    ]
}